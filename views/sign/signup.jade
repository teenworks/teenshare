// signup.jade
extends ../layout

block content
    div
        if error
            p= error
        else
            p= success
    form(action='/signup', method='post')
        input(placeholder='用户名', name='name')
        input(placeholder='密码', name='pass', type='password')
        input(placeholder='再次输入密码', name='re_pass', type='password')
        input(value='submit', type='submit')
